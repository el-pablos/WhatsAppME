# WhatsApp Me Bot - Environment Configuration Example
# Copy this file to .env and configure your settings

# ===========================================
# BOT CONFIGURATION
# ===========================================

# Bot basic settings
BOT_NAME="WhatsApp Me Bot"
BOT_VERSION="1.0.0"
NODE_ENV="production"

# ===========================================
# OPERATIONAL SETTINGS
# ===========================================

# Timezone (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ="Asia/Jakarta"

# Operational hours (24-hour format)
OPERATIONAL_START="08:00"
OPERATIONAL_END="17:00"

# Work days (0=Sunday, 1=Monday, ..., 6=Saturday)
# Example: "1,2,3,4,5" for Monday-Friday
WORK_DAYS="1,2,3,4,5"

# ===========================================
# AUTO-REPLY CONFIGURATION
# ===========================================

# Enable/disable auto-reply (true/false)
AUTO_REPLY_ENABLED="true"

# Maximum auto-replies per user per day
MAX_AUTO_REPLY_PER_USER="1"

# ===========================================
# PAYMENT CONFIGURATION
# ===========================================

# Bank Transfer
BANK_NAME="BCA"
BANK_ACCOUNT="1234567890"
BANK_ACCOUNT_NAME="PT. CONTOH BISNIS"

# E-Wallet
EWALLET_NAME="DANA"
EWALLET_ACCOUNT="081234567890"
EWALLET_ACCOUNT_NAME="NAMA PENERIMA"

# QRIS
QRIS_MERCHANT_NAME="MERCHANT NAME"
QRIS_CODE="qris-static-code-here"

# ===========================================
# CONTACT INFORMATION
# ===========================================

# Admin contact
ADMIN_PHONE="+628123456789"
ADMIN_EMAIL="admin@example.com"
COMPANY_WEBSITE="www.example.com"

# Office address
OFFICE_ADDRESS="Jl. Contoh No. 123, Jakarta Selatan 12345"

# Emergency contact
EMERGENCY_PHONE="+6281199998888"

# ===========================================
# TECHNICAL SETTINGS
# ===========================================

# Port for health checks (optional)
PORT="3000"

# Session path
SESSION_PATH="./session"

# Data storage paths
USER_DATA_PATH="./data/users.json"
QUIZ_DATA_PATH="./data/quiz.json"
BACKUP_PATH="./data/backup"

# Log settings
LOG_LEVEL="info"
LOG_PATH="./logs"

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Rate limiting (requests per minute per user)
RATE_LIMIT_PER_MINUTE="10"

# Session timeout (in hours)
SESSION_TIMEOUT="24"

# Backup retention (in days)
BACKUP_RETENTION_DAYS="30"

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Enable analytics (true/false)
ANALYTICS_ENABLED="true"

# Analytics retention (in days)
ANALYTICS_RETENTION_DAYS="90"

# Performance monitoring
PERFORMANCE_MONITORING="true"

# ===========================================
# DEPLOYMENT SPECIFIC
# ===========================================

# For Pterodactyl Panel
PTERODACTYL_MODE="false"

# For Docker deployment
DOCKER_MODE="false"

# For PM2 deployment
PM2_MODE="false"

# ===========================================
# ADVANCED SETTINGS
# ===========================================

# Puppeteer settings (for WhatsApp Web)
PUPPETEER_HEADLESS="true"
PUPPETEER_ARGS="--no-sandbox,--disable-setuid-sandbox"

# Memory limits (in MB)
MEMORY_LIMIT="1024"

# CPU limits (percentage)
CPU_LIMIT="100"

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable specific features
FEATURE_QUIZ_ENABLED="true"
FEATURE_POLLING_ENABLED="true"
FEATURE_PAYMENT_INFO="true"
FEATURE_AUTO_BACKUP="true"
FEATURE_ANALYTICS="true"

# ===========================================
# CUSTOMIZATION
# ===========================================

# Custom greeting messages (comma-separated)
CUSTOM_GREETINGS="Selamat pagi,Selamat siang,Selamat sore,Selamat malam"

# Custom menu items (JSON format)
# CUSTOM_MENU_ITEMS='[{"name":"Custom Item","description":"Custom description"}]'

# ===========================================
# INTEGRATION SETTINGS
# ===========================================

# Webhook URL (optional)
# WEBHOOK_URL="https://your-webhook-url.com/webhook"

# API Keys (if needed for integrations)
# EXTERNAL_API_KEY="your-api-key-here"

# Database connection (if using external database)
# DATABASE_URL="mongodb://localhost:27017/whatsapp-bot"

# ===========================================
# NOTES
# ===========================================

# 1. Remove the # symbol to uncomment and use a setting
# 2. String values should be enclosed in quotes
# 3. Boolean values should be true or false (without quotes)
# 4. Array values should be comma-separated
# 5. JSON values should be properly formatted
# 6. Restart the bot after changing environment variables
